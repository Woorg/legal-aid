.logo
	display block
	retinaSprite($logo_group)
	color #333333
	font-family Georgia
	font-size 19px
	font-weight 700
	font-style italic
	text-decoration none
	letter-spacing tracking(20)
	+r(1110px)
		font-size 16px
	&__text
		padding-top 155px
		padding-left 112px
		white-space nowrap
		+r(1110px)
			padding-left 118px

.logo_second
	position relative
	.logo__image
		width 252px
		height 234px
	.logo__text
		position absolute
		top 154px
		left 120px
		padding-top 0
		padding-left 0
		padding-bottom 12px
		color #ffffff
		&:after
			position absolute
			bottom 0
			left 0
			width 278px
			height 8px
			background url(../images/general/logo-slogan.png) 0 0 no-repeat
			background-size 278px 8px
			content ''
