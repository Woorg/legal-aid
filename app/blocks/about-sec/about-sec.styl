.about-sec
	overflow hidden
	&__in
		@extends .in
		padding-top 100px
		padding-bottom 60px
		+r(768px)
			padding-top 50px
			padding-bottom 30px
	&__title
		margin-bottom 50px
		@extends .title
	&__list
		display flex
		flex-wrap wrap
		justify-content space-between

	&__item
		position relative
		display inline-block
		vertical-align top
		width 264px
		color #000000
		text-align center
		&:after
			position absolute
			top 0
			left 50%
			margin-top -59px
			margin-left -104px
			retinaSprite($about_icon_group)
			content ''
		+r(1024px)
			margin-bottom 10px
		+r(768px)
			width 100%

	&__num
		margin-bottom 64px
		font-size 46px
		font-family $alg
		letter-spacing tracking(20)
	&__item-title
		font-family $nimb
		font-size 21px
		line-height 25px
		letter-spacing tracking(20)
	&__arrow
		position absolute
		bottom 40px
		right -10px
		width 50px
		height 50px
		fill #99cc99
		+r(1024px)
			bottom 60px
		+r(768px)
			display none
