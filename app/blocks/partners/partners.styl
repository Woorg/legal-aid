.partners
	padding-top 45px
	padding-bottom 110px
	overflow hidden
	&__title
		margin-bottom 75px
		@extends .title
		span
			&:before,
			&:after
				border-top 3px solid #d0c4b7
	&__list
		display flex
		flex-wrap nowrap
		justify-content space-between
		align-items center
		+r(1024px)
			flex-wrap wrap
		+r(728px)
			display block
	&__item
		padding-left 20px
		padding-right 20px
		width 25%
		text-align center
		+r(1024px)
			margin-bottom 20px
			width 50%
		+r(728px)
			width 100%
	&__link
		display flex
		justify-content center
	&__image
		img
			@extends .image
