.form
	padding-top 30px
	padding-right 66px
	padding-bottom 45px
	padding-left 66px
	max-width 472px
	min-height 528px
	background #e2ffe2
	color #333333
	box-shadow -4px 2px 4px 2px rgba(153, 153, 153, 0.13)
	+r(768px)
		padding-left 33px
		padding-right 33px
		min-height auto
	&__title
		margin-bottom 40px
		font-family $nimb
		font-size 23px
		font-weight 500
		line-height 28px
		text-align center
		+r(768px)
			font-size 19px
			line-height 23px
		span
			border-bottom 1px solid #333333

	// &__w
	&__field
		border none
		margin-bottom 11px
		padding-left 17px
		padding-right 17px
		width 100%
		min-height 47px
		background-color #ffffff
		color #999999
		font-family $nimb
		font-size 17px
		letter-spacing tracking(20)
		box-shadow -2px 2px 4px 1px rgba(153, 153, 153, 0.13)
		+placeholder()
			color #999999
	// &__field-text
	&__field-message
		padding-top 17px
		min-height 157px
	&__field-submit
		margin-top 28px
		margin-bottom 0
		min-height 61px
		background #d7d7d7
		color #333333
		font-size 22px
		white-space normal
		box-shadow -2px 2px 4px 1px rgba(153, 153, 153, 0.33)
		tr(all .3s ease)
		&:hover
			background darken(#d7d7d7, 10)
		+r(768px)
			margin-top 0

.form_style-second
	background rgba(102,153,102,.24) url(../images/general/pattern.png) 0 0 repeat
	max-width 539px
	.form__title
		margin-bottom 35px
		font-size 25px
		line-height 31px
		+r(768px)
			margin-bottom 15px
			font-size 20px
			line-height 25px
		span
			border none
	.form__field
		min-height 59px
		font-family $cent
		font-style italic
		+r(768px)
			min-height 40px
	.form__field-submit
		min-height 66px
		background #ccffcc
		font-family $nimb
		font-weight bold
		font-style normal
		font-size 21px
		border 1px solid #636363
		box-shadow none
		&:hover
			background darken(#ccffcc, 10)
