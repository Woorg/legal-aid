.page
	font-display swap
	font-family $bA
	font-weight normal
	font-size 15px
	line-height 1.4
	color #333333
	background #fff
.in
	margin auto
	padding-right 15px
	padding-left 15px
	max-width 1170px
.page
	&__in
		@extends .in
	&__bottom
		clr()
	&__map
		float left
		width 50%
		+r(1024px)
			float none
			width 100%
	&__contacts
		float right
		width 50%
		+r(1024px)
			float none
			width 100%
.image
	display block
	max-width 100%
	height auto
.title
	color #333333
	font-family $aTit
	font-size 30px
	line-height 52px
	text-align center
	text-transform uppercase
	letter-spacing tracking(20)
	+r(768px)
		font-size 25px
		line-height 43px
	+r(550px)
		font-size 21px
		line-height 36px
	span
		position relative
		border-left 62px solid transparent
		border-right 62px solid transparent
		display inline-block
		vertical-align top
		+r(550px)
			border-left 0
			border-right 0
		&:after,
		&:before
			position absolute
			top 50%
			margin-top -5px
			border-top 3px solid #ddffdd
			border-bottom 3px solid #a9a9a9
			width 1920px
			height 7px
			background transparent
			content ''
			+r(550px)
				margin-top -8px
		&:after
			left calc(100% + 62px)
			+r(550px)
				left calc(100% + 31px)
		&:before
			right calc(100% + 62px)
			+r(550px)
				right calc(100% + 31px)
