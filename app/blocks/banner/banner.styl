.banner
	overflow hidden
	background-color #e1e1e1
	&__link
		position relative
		min-height 220px
		display block
		font-family Arial, 'Helvetica Neue', Helvetica, sans-serif
		font-size 18px
		letter-spacing tracking(80)
		color #666666
		text-decoration none
		span
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
		img
			@extends .image
